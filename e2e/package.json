{
  "name": "meeting-plunger-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Meeting Plunger using Playwright and Cucumber",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--import tsx/esm' cucumber-js --import 'steps/*.ts' --import 'support/*.ts'",
    "test:headed": "HEADED=true NODE_OPTIONS='--import tsx/esm' cucumber-js --import 'steps/*.ts' --import 'support/*.ts'",
    "test:debug": "PWDEBUG=1 NODE_OPTIONS='--import tsx/esm' cucumber-js --import 'steps/*.ts' --import 'support/*.ts'",
    "dry-run": "NODE_OPTIONS='--import tsx/esm' cucumber-js --dry-run --import 'steps/*.ts' --import 'support/*.ts'",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "playwright",
    "cucumber",
    "e2e",
    "testing"
  ],
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "eslint": "^9.18.0",
    "playwright": "^1.51.1",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
