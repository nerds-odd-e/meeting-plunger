{
  "name": "meeting-plunger-e2e",
  "version": "1.0.0",
  "description": "E2E tests for Meeting Plunger using Playwright and Cucumber",
  "type": "module",
  "scripts": {
    "test": "cucumber-js --import 'steps/*.js' --import 'support/*.js'",
    "test:headed": "HEADED=true cucumber-js --import 'steps/*.js' --import 'support/*.js'",
    "test:debug": "PWDEBUG=1 cucumber-js --import 'steps/*.js' --import 'support/*.js'",
    "test:ui": "cucumber-js features/client-ui.feature --import 'steps/*.js' --import 'support/*.js'",
    "test:health": "cucumber-js features/health-check.feature --import 'steps/*.js' --import 'support/*.js'",
    "dry-run": "cucumber-js --dry-run --import 'steps/*.js' --import 'support/*.js'"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "e2e",
    "testing"
  ],
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@playwright/test": "^1.51.1",
    "playwright": "^1.51.1"
  }
}
